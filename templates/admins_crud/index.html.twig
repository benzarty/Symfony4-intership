{% extends 'admin_services/backendAdmin.html.twig' %}
{% block central %}
    <div class="container-xl">
        <h1 style="text-align: center;"><span style="color: #ffffff;"><strong>GESTIONS DES Admins</strong></span></h1>


        <table id="articles" class="table  table-bordered table-hover table-dark   ">
        <thead>
            <tr>

                <th>Nom</th>

                <th>Prenom</th>
                <th>Photo</th>
                <th>Email</th>

                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td><img src="{{ asset('uploads/' ~ user.photo) }}" style="width: 50px;height: 50px"></td>
                <td>{{ user.email }}</td>
                <td>{{ user.status }}</td>
                <td>
                    <a href="{{ path('admins_crud_show', {'id': user.id}) }}" class="btn btn-secondary">show</a>
                    <a href="{{ path('admins_crud_edit', {'id': user.id}) }}" class="btn btn-info">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('new_admin') }}">Create new</a>
</div>
{% endblock %}
