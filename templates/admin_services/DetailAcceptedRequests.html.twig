{% extends 'admin_services/backendAdmin.html.twig' %}
{% block central %}


    <div class="container">

        <table id="articles" class="table  table-bordered table-hover table-dark   ">
            <tbody>

            <th>Libele</th>
            <td>{{ user.libele }}</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>{{ user.categorie }}</td>
            </tr>
            <tr>
                <th>Date Debut</th>
                <td>{{ user.datedebut | date}}</td>
            </tr>

            <tr>
                <th>Date Fin</th>
                <td>{{ user.datefin | date }}</td>
            </tr>

            <tr>
                <th>Description</th>
                <td>{{ user.description }}</td>
            </tr>
            <tr>
                <th>Info client </th>
                <td>{{ user.idclient }}</td>
            </tr>

            <tr>
                <th>why did you choose this company ?</th>
                <td>{{ user.q1 }}</td>            </tr>
            <tr>
                <th>did you ever worked in similar job and what is the operation ?</th>
                <td>{{ user.q2 }}</td>            </tr>
            <tr>
                <th>For how long have you been working there ?</th>
                <td>{{ user.q3 }}</td>            </tr>
            <tr>
                <th>Cv</th>
                <td><a href="{{ asset('uploads/' ~ user.cv) }}" class="btn btn-success">Show Cv</a></td>
            </tr>
            <tr>
                <th>Photo</th>
                <td><img src="{{ asset('uploads/' ~ user.photo) }}" style="width: 50px;height: 50px"></td>
            </tr>


            </tbody>
        </table>





    </div>
{% endblock %}
