{% extends 'users_services/baseFrontUserAfterlogin.html.twig' %}

{% block body %}




    <!-- Content here -->
    <div class="container-xl">
        <h1 style="text-align: center;"><span  style="color: #ffffff;"><strong>MODIFIER Profil</strong></span></h1>
        <div class="content-header">
            <div class="row">

            {% for user in users %}
                <div class="col-sm-6">
                    <div class="card text-center">
                        <ul class="list-group list-group-flush w-100 align-items-stretch">
                            <li class="list-group-item text-center d-inline-block">
                        <img class="card-img-top align-content-center" src="{{ asset('uploads/' ~ user.photo) }}" style="width: 150px;height: 150px">
                            </li></ul>
                        <div class="card-header">
                            {{ user.libele }}
                        </div>
                        <div class="card-body">
                            <ul class="list-group list-group-flush w-100 align-items-stretch">
                                <li class="list-group-item text-center d-inline-block"> {{ user.categorie }}</li></ul>

                            <p class="card-text">Date debut : {{ user.datedebut | date}}. </p>
                            <p class="card-text">Date Fin : {{ user.datefin | date }}. </p>


                            <a  class="btn btn-info" href="{{ path('showdetailuseroffre', {'id': user.id}) }}">Voir Detail</a>
                        </div>
                        <div class="card-footer text-muted">

                        </div>
                    </div>

                </div>


                {% endfor %}


</div>


        </div></div>




{% endblock %}